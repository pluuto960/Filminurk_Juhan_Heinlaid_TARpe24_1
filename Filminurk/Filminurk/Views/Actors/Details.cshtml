@model Filminurk.Models.Actors.ActorsDetailsViewModel

<h1>Näitleja info</h1>

<div>
	<h4>Näitleja info</h4>
	<dl class="row">

		<div class="form-group-row">
			<label asp-for="ActorID" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.ActorID)
		</div>

	</dl>

	<dl class="row">
		<div class="form-group-row">
			<label asp-for="FirstName" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.FirstName)
		</div>
	</dl>

	<dl class="row">
		<div class="form-group-row">
			<label asp-for="LastName" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.LastName)
		</div>
	</dl>

	<dl class="row">
		<div class="form-group-row">
			<label asp-for="NickName" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.NickName)
		</div>
	</dl>

	<dl class="row">
		<div class="form-group-row">
			<label asp-for="FavouriteGenre" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.FavouriteGenre)
		</div>
	</dl>

	<dl class="row">
		<div class="form-group-row">
			<label asp-for="HasAwards" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.HasAwards)
		</div>
	</dl>

	<dl class="row">
		<div class="form-group-row">
			<label asp-for="American" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.American)
		</div>
	</dl>

	<dl class="row">
		<div class="form-group-row">
			<label asp-for="EntryCreatedAt" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.EntryCreatedAt)
		</div>
	</dl>

	<dl class="row">
		<div class="form-group-row">
			<label asp-for="EntryModifiedAt" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.EntryModifiedAt)
		</div>
	</dl>

	<dl class="row">
		<div class="form-group-row">
			<label asp-for="MoviesActedFor" class="col-sm-2 col-form-label"></label>
			@foreach (var movie in Model.MoviesActedFor)
			{
				string txtmovie = movie + ", ";
				@Html.DisplayFor(mov => txtmovie)
		}
		</div>
	</dl>

	
	

	<hr />
	<a asp-action="Index" asp-controller="Actors" class="btn btn-primary">Tagasi loendisse</a>
</div>